    <screen id="inGameStart" controller="com.greenit.game.gui.InGameMenu">
        <layer id="layer3" backgroundColor="#f110" childLayout="vertical" width="100%" height="100%" valign="center">              
            <panel id ="pushV" align="left" childLayout="horizontal" width="100%" height="10%" TextValign="center"></panel>                  
